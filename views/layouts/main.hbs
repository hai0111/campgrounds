<html lang='en'>

<head>
	<meta charset='UTF-8' />
	<meta name='viewport' content='width=device-width, initial-scale=1.0' />

	<link rel='stylesheet' href='/bootstrap/css/bootstrap.min.css' />
	<title>{{#if title}}
		{{title}}
		{{else}}
		Campgrounds
		{{/if}}
	</title>

</head>

<body class="d-flex flex-column vh-100 position-relative">
	{{#if message}}
	{{#with message}}
	<div class="position-fixed top-0 end-0 p-3" style="z-index: 11">
		<div id="liveToast" class="toast show" role="alert"
			aria-live="assertive" aria-atomic="true">
			<div class="toast-header">
				<img src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAIEAAACBCAMAAADQfiliAAAAA1BMVEUAAP+KeNJXAAAAJklEQVR4nO3BAQEAAACCIP+vbkhAAQAAAAAAAAAAAAAAAAAAALwbQYIAAVCVNwcAAAAASUVORK5CYII="
					width="20px" height="20px" class="rounded me-2" alt="...">
				<strong class="me-auto">
					{{title}}
				</strong>
				<button type="button" class="btn-close" data-bs-dismiss="toast"
					aria-label="Close"></button>
			</div>
			<div class="toast-body">
				{{text}}
			</div>
		</div>
	</div>
	{{/with}}
	{{/if}}

	<div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
		<div class="toast-header">
			<img src="..." class="rounded mr-2" alt="...">
			<strong class="mr-auto">Bootstrap</strong>
			<small>11 mins ago</small>
			<button type="button" class="ml-2 mb-1 close" data-dismiss="toast"
				aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
		<div class="toast-body">
			Hello, world! This is a toast message.
		</div>
	</div>

	{{#if nav}}
	{{>navbar}}
	{{/if}}

	<main class='container mt-5'>
		{{{body}}}
	</main>

	{{>footer}}



	<script src='/bootstrap/js/bootstrap.bundle.min.js'></script>

	<script src='/validateForms.js'></script>
</body>

</html>