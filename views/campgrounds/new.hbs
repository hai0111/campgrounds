<div class='row'>
	<h1 class='text-center'>Form Add Campground</h1>
	<div class='col-6 offset-3'>
		{{!-- class='validation-form' --}}
		<form action='/campgrounds' method='post' novalidate
			enctype="multipart/form-data">
			<div class='mb-2'>
				<label for='title' class='form-label'> Title</label>
				<input class='form-control' type='text' name='title' id='title'
					required />
				<div class="valid-feedback">
					Looks good!
				</div>
			</div>

			<div class='mb-2'>
				<label for='location' class='form-label'> Location</label>
				<input class='form-control' type='text' name='location'
					id='location' required />
				<div class="valid-feedback">
					Looks good!
				</div>
			</div>

			<div class="mb-2">
				<label for='images' class='form-label'> Upload image</label>
				<input type="file" class="form-control" for='images'
					name="images" id="images" required multiple>
				<div class="valid-feedback">
					Looks good!
				</div>
			</div>


			<div class='mb-2'>
				<label for='price' class='form-label'> Price</label>
				<div class='input-group'>
					<span class='input-group-text'>$</span>
					<input type='text' class='form-control' name='price'
						placeholder='0.00' step='0.01' id='price' required />
					<div class="valid-feedback">
						Looks good!
					</div>
				</div>
			</div>

			<div class='mb-2'>
				<label for='description' class='form-label'>Example
					textarea</label>
				<textarea class='form-control' name='description'
					id='description' rows='3' required></textarea>
				<div class="valid-feedback">
					Looks good!
				</div>
			</div>

			<div class='mb-2'>
			</div>


			<div class='d-flex justify-content-end mt-4'>
				<a href='/campgrounds' class='btn btn-info'>
					Back to Campgrounds
				</a>
				<button type='submit' class='btn btn-success ms-2'>Add
					Campground</button>
			</div>

		</form>
	</div>
</div>