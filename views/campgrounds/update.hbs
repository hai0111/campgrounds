<div class='row'>
	<h1 class='text-center'>{{title}}</h1>
	<div class='col-6 offset-3'>
		<form action='/campgrounds/{{camp.id}}?_method=PUT' method='post'
			class="validation-form" novalidate>
			<div class='mb-3'>
				<label for='title' class='form-label'> Title</label>
				<input class='form-control' type='text' name='title' id='title'
					value='{{camp.title}}' required />
				<div class="valid-feedback">
					Looks good!
				</div>
			</div>

			<div class='mb-3'>
				<label for='location' class='form-label'> Location</label>
				<input class='form-control' type='text' name='location'
					id='location' value='{{camp.location}}' required />
				<div class="valid-feedback">
					Looks good!
				</div>

			</div>

			<div class='mb-3'>
				<label for='image' class='form-label'> Image URL</label>
				<input class='form-control' type='text' name='image' id='image'
					value='{{camp.image}}' required />
				<div class="valid-feedback">
					Looks good!
				</div>
			</div>

			<div class='mb-3'>
				<label for='price' class='form-label'> Price</label>
				<div class='input-group'>
					<span class='input-group-text'>$</span>
					<input type='number' class='form-control' name='price'
						placeholder='0.00' step='0.01' id='price'
						value='{{camp.price}}' required />
					<div class="valid-feedback">
						Looks good!
					</div>

				</div>
			</div>

			<div class='mb-3'>
				<label for='description' class='form-label'>Example
					textarea</label>
				<textarea class='form-control' name='description'
					id='description' rows='3'
					required>{{camp.description}}</textarea>
				<div class="valid-feedback">
					Looks good!
				</div>

			</div>

			<div class='d-flex justify-content-end'>
				<a href='/campgrounds/{{camp.id}}' class='btn btn-info'>
					Back to details
				</a>
				<button type='submit'
					class='btn btn-primary ms-2'>Update</button>
			</div>
		</form>
	</div>
</div>